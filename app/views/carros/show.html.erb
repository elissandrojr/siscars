<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Veículos</h1>
  <%= link_to carros_path, class: 'd-none d-sm-inline-block btn btn-md btn-danger shadow-sm' do  %>
  <i class="fas fa-angle-left"></i> Voltar
  <% end %>
</div>

<div class="card shadow mb-4">
  <!-- Card Header - Dropdown -->
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Ficha do veículos</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <div class="row">

      <div class="col-md-4">
      <div class="form-group">
      <strong>Proprietario:</strong>
      <%= @carro.proprietario %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Exercicio:</strong>
      <%= @carro.exercicio %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Placa:</strong>
      <%= @carro.placa %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Renavam:</strong>
      <%= @carro.renavam %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Chassi:</strong>
      <%= @carro.chassi %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Modelo:</strong>
      <%= @carro.modelo %>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <strong>Ano:</strong>
      <%= @carro.ano %>
      </div>
      </div>

      <div class="col-md-12">
      <div class="form-group">
      
        <h5>Documentos</h5> 
        <ul>
          <% @carro.files.each do |file| %>
            <li style="margin-bottom:10px;">
              <%= link_to file.filename, url_for(file) %>
              <%= link_to  carro_file_doc_path(@carro, file), method: :delete, data: { confirm: "Tem certeza?" }, class: 'btn btn-danger' do  %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            </li>
          <% end %>
        </ul>

        <%= link_to 'Enviar Documento', new_carro_file_doc_path(@carro), class: 'btn btn-primary' %>
      </div>
      </div>

    </div>
  </div>
</div>


