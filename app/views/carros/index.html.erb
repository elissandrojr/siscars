<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Veículos</h1>
  <%= link_to new_carro_path, class: 'd-none d-sm-inline-block btn btn-md btn-primary shadow-sm' do  %>
  <i class="fas fa-plus"></i> Novo Carro
  <% end %>
</div>


<div class="card shadow mb-4">
  <!-- Card Header - Dropdown -->
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Lista de todos os veículos</h6>
    <div class="dropdown no-arrow">
      <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
        <div class="dropdown-header">Dropdown Header:</div>
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Something else here</a>
      </div>
    </div>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover" cellspacing="0">
        <thead>
          <tr>
            <th>Status</th>
            <th>Proprietario</th>
            <th>Placa</th>
            <th>Renavam</th>
            <th>Chassi</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @carros.each do |carro| %>
            <tr>
              <td>
                <% if carro.exercicio <= Time.new.year %>
                  <span class="badge badge-danger">Vencido <%= carro.exercicio %></span>                  
                <% else %>
                  <span class="badge badge-success">Regular <%= carro.exercicio %></span>                   
                <% end %>
              </td>
              <td><%= carro.proprietario %></td>
              <td nowrap><%= carro.placa %></td>
              <td><%= carro.renavam %></td>
              <td><%= carro.chassi %></td>
              <td><%= carro.modelo %></td>
              <td><%= carro.ano %></td>
              <td nowrap>
              <%= link_to carro_path(carro), class: 'btn btn-primary' do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_carro_path(carro), class: 'btn btn-info' do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to carro_path(carro), method: :delete, data: { confirm: 'Deseja apagar?' }, class: 'btn btn-danger' do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

